<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#E2BCB7"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:text="Wellcome to"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:gravity="right"
            android:paddingRight="50dp"
            android:text="TIỆM VỚ 5CE"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/imgSanPham_frame1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="350dp"
            android:src="@drawable/frame1_san_pham1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Make your beuatiful everyday"/>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgIcon1_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_sang"/>
            <ImageView
                android:id="@+id/imgIcon2_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_toi"/>
            <ImageView
                android:id="@+id/imgIcon3_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_toi"/>
            <ImageView
                android:id="@+id/imgIcon4_frame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/frame1_cham_toi"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:backgroundTint="#FFEFE0"
            android:textColor="#4E352F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="GET STARTED"
            android:textSize="30sp"/>
    </LinearLayout>
</RelativeLayout>